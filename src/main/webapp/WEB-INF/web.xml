<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>GenerateStandaloneHTMLPageServlet</servlet-name>
        <servlet-class>com.babusa.learn.GenerateStandaloneHTMLPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GenerateHTMLTemplatePageServlet</servlet-name>
        <servlet-class>com.babusa.learn.GenerateHTMLTemplatePageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HeaderTemplateServlet</servlet-name>
        <servlet-class>com.babusa.learn.HeaderTemplateServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>GenerateStandaloneHTMLPageServlet</servlet-name>
        <url-pattern>/generateStandaloneHTMLPage</url-pattern>
        <load-on-startup>0</load-on-startup>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GenerateHTMLTemplatePageServlet</servlet-name>
        <url-pattern>/generateHTMLTemplatePage</url-pattern>
        <load-on-startup>0</load-on-startup>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HeaderTemplateServlet</servlet-name>
        <url-pattern>/headerTemplate</url-pattern>
        <load-on-startup>0</load-on-startup>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
